    rdfs:comment """tbd"""@de ;
    rdfs:subClassOf schema:GovernmentOrganization ;
    rdfs:subClassOf schema:GovernmentOffice ;
    rdfs:subClassOf org ;
    rdfs:isDefinedBy berorgs: ;
.


berorgs:öffentlichesUnternehmen a owl:Class ; 
